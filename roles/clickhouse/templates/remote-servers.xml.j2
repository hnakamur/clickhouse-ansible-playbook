<clickhouse>
    <remote_servers replace="true">
        <{{ clickhouse_cluster_name }}>
            <!-- <secret>mysecretphrase</secret> -->
{%   for shard in clickhouse_shards|selectattr("cluster_name", "==", clickhouse_cluster_name)|list %}
            <shard>
                <internal_replication>true</internal_replication>
{%     for server in clickhouse_servers|selectattr("cluster_name", "==", clickhouse_cluster_name)|list|selectattr("shard_id", "==", shard.shard_id)|list %}
                <replica>
                    <host>{{ server.host }}</host>
                    <port>9000</port>
                </replica>
{%     endfor %}
            </shard>
{%   endfor %}
        </{{ clickhouse_cluster_name }}>
    </remote_servers>
</clickhouse>
